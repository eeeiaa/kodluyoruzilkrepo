import java.util.Scanner;

public class project {
    public static void main(String[] args) {
        int i, total = 0;

        Scanner input = new Scanner(System.in);

        do {
            System.out.print("Sayi giriniz:");
            i = input.nextInt();
            if (i > 0 && i % 2 != 1) {
                total += i;
            }
        } while (i % 2 == 0);
        System.out.println("Girilen Sayilarin Toplami:" + total);
    }
}
